<% layout("/layouts/boilerplate") %>
<body>
  <style>
    .filter {
      margin-top: 2rem;
      text-align: center;
      margin-right: 3rem;
      opacity: 0.7;
    }

    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.8rem;
      color: black;
    }

    .tax-info {
      display: none;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3rem;
      padding: 1rem;
      margin-left: 2rem;
      display: flex;
      align-items: center;
    }
    a {
      text-decoration: none;
    }
    a i {
      text-decoration: none;
      color: black;
    }
  </style>

  <div id="filters">
    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Rooms/tags"
          ><i class="bi bi-fire"></i>
          <p>Trendings</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Rooms/tags"
          ><i class="fa-solid fa-bed"></i>
          <p>Rooms</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Iconic Cites/tags"
          ><i class="fa-solid fa-building"></i>
          <p>Iconic Cites</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Mountain/tags"
          ><i class="fa-solid fa-mountain-sun"></i>
          <p>Mountain</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Castles/tags"
          ><i class="fa-brands fa-fort-awesome"></i>
          <p>Castles</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Amazing Pools/tags"
          ><i class="fa-solid fa-person-swimming"></i>
          <p>Amazing Pools</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Camping/tags"
          ><i class="fa-solid fa-campground"></i>
          <p>Camping</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Farms/tags"
          ><i class="fa-solid fa-cow"></i>
          <p>Farms</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Arctic/tags"
          ><i class="fa-solid fa-snowflake"></i>
          <p>Arctic</p></a
        >
      </div>
    </div>

    <div class="filter">
      <div>
        <a href="http://localhost:5004/listings/Beach/tags"
          ><i class="fa-solid fa-umbrella-beach"></i>
          <p>Beach</p></a
        >
      </div>
    </div>
    <!-- <div class="filter">
        <div><i class="fa-solid fa-water"></i></div>

        <p>Lake</p>
    </div> -->
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after Taxes</label
        >
      </div>
    </div>
  </div>

  <!-- <form method="GET" action="/listings/new">
        <button>Create new Listing </button>
    </form> -->

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListing ){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%=listing.title%> </b> <br />

            &#8377; <%=listing.price.toLocaleString("en-IN")%> / Night
            <i class="tax-info">&nbsp; &nbsp; +18%gst</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxinfo = document.getElementsByClassName("tax-info");
    for (info of taxinfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
